{
  "name": "@sensoria/api",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "predev": "pnpm start-database",
    "dev": "tsx watch ./src/app.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migration:generate": "pnpm drizzle-kit generate:pg --schema=./src/db/schema.ts",
    "premigration:run": "pnpm start-database",
    "migration:run": "tsx scripts/migrate.ts",
    "postmigration:run": "pnpm stop-database",
    "preseed:run": "pnpm start-database",
    "seed:run": "tsx scripts/seed.ts --reset",
    "postseed:run": "pnpm stop-database",
    "start-database": "docker-compose up -d",
    "stop-database": "docker-compose stop"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.2",
    "drizzle-orm": "^0.27.1",
    "drizzle-zod": "^0.4.4",
    "garph": "^0.5.4",
    "graphql-yoga": "^4.0.2",
    "postgres": "^3.3.5",
    "zod": "^3.21.4",
    "zod-fixture": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "tsx": "^3.12.7",
    "vitest": "^0.32.2"
  }
}
