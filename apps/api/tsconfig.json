{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "extends": "@whitebird/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    "module": "ESNext",
    "declaration": false,
    "declarationMap": false,
    "types": [
      "vitest/importMeta"
    ]
  },
  "include": ["src", "scripts", "vitest-setup.ts"],
  "exclude": ["node_modules", "dist"]
}
